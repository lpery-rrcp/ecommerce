<h1>Welcome to Crafters Den</h1>

<%# ---- Regular User Section ---- %>
<% if user_signed_in? %>
  <p>Welcome, <%= current_user.email %>!</p>
  <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
<% else %>
  <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary" %> |
  <%= link_to "Login", new_user_session_path, class: "btn btn-primary" %>
<% end %>

<%# ---- Admin Section ---- %>
<% if admin_user_signed_in? %>
  <p class="mt-3">Logged in as admin: <%= current_admin_user.email %></p>
  <%= link_to "Admin Dashboard", admin_root_path, class: "btn btn-warning" %> |
  <%= link_to "Admin Products", admin_products_path, class: "btn btn-warning" %> |
  <%= link_to "Admin Orders", admin_orders_path, class: "btn btn-warning" %>
  <br>
  <%= button_to "Admin Logout", destroy_admin_user_session_path, method: :delete, class: "btn btn-danger mt-2" %>
<% else %>
  <%= link_to "Admin Login", new_admin_user_session_path, class: "btn btn-secondary mt-3" %>
<% end %>

<hr>

<h2>Explore Our Categories</h2>
<%= link_to "View Products", products_path, class: "btn btn-custom" %> |
<%= link_to "View Categories", categories_path, class: "btn btn-custom" %> |
<%= link_to "View Orders", orders_path, class: "btn btn-custom" %>
