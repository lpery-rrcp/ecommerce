<h2><%= @product.name %></h2>
<p><%= @product.description %></p>

<h3>Reviews</h3>
<% @product.reviews.each do |review| %>
  <p><%= review.user.email %>: <%= review.rating %></p>
<% end %>

<% if user_signed_in? %>
  <h4>Leave a Review:</h4>
  <%= form_with url: reviews_path do |f| %>
    <%= f.hidden_field :product_id, value: @product.id %>
    <div><%= f.label :rating %> <%= f.number_field :rating, in: 1..5 %></div>
    <div><%= f.label :comment %> <%= f.text_area :comment %></div>
    <%= f.submit "Post Review" %>
  <% end %>
<% end %>

<%# Add to Cart Form %>
<%= form_with url: add_to_cart_path(@product), method: :post, local: true do |f| %>
  <%= f.hidden_field :product_id, value: @product.id %>
  <%= f.submit "Add to Cart", class: "btn btn-primary" %>
<% end %>

<%= link_to "Return to Shop", products_path %>
