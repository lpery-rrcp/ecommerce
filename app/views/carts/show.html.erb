<h2>Your Cart ðŸ›’</h2>
<% if @items.empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Subtotal</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item[:product].name %></td>
          <td>
            <%= form_with url: update_item_cart_path(item[:product]), method: :patch, local: true do |f| %>
              <%= f.number_field :quantity, value: item[:quantity], min: 1 %>
              <%= f.submit "Update" %>
            <% end %> <!-- This ends the form_with block -->
          </td>
          <td><%= number_to_currency(item[:product].price) %></td>
          <td><%= number_to_currency(item[:total_price]) %></td>
          <td>
            <%= button_to "Remove", remove_from_cart_path(item[:product]), method: :delete, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <h3>Total: <%= number_to_currency(@total) %></h3>
  <%= button_to "Checkout", checkout_create_path, method: :post, class: "btn btn-primary" %>
  <div style="margin-bottom: 1em;">
    <%= link_to "â¬… Continue Shopping", products_path, class: "btn btn-outline-dark" %>
  </div>
<% end %>